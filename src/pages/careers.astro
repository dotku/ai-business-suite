---
import Layout from '../layouts/Layout.astro';

const jobOpenings = [
  {
    title: "AI/ML Engineer",
    department: "Engineering",
    location: "Remote",
    type: "Full-time",
    experience: "5+ years",
    salary: "$130K - $180K",
    requirements: [
      "5+ years experience in machine learning",
      "Strong Python and TensorFlow/PyTorch skills",
      "Experience with NLP and large language models",
      "Track record of deploying ML models to production"
    ],
    responsibilities: [
      "Design and implement AI/ML solutions",
      "Collaborate with cross-functional teams",
      "Optimize model performance and scalability",
      "Mentor junior engineers"
    ]
  },
  {
    title: "Full Stack Developer",
    department: "Engineering",
    location: "Remote / Hybrid",
    type: "Full-time",
    experience: "3+ years",
    salary: "$100K - $150K",
    requirements: [
      "3+ years experience with modern web frameworks",
      "Strong TypeScript and React skills",
      "Experience with Node.js and API development",
      "Understanding of cloud services (AWS/GCP/Azure)"
    ],
    responsibilities: [
      "Build and maintain web applications",
      "Implement AI integrations",
      "Optimize application performance",
      "Write clean, maintainable code"
    ]
  },
  {
    title: "Data Scientist",
    department: "Data",
    location: "Remote",
    type: "Full-time",
    experience: "3+ years",
    salary: "$120K - $170K",
    requirements: [
      "MS/PhD in Computer Science, Statistics, or related field",
      "Strong background in statistical analysis",
      "Experience with data visualization",
      "Proficiency in Python and R"
    ],
    responsibilities: [
      "Develop data-driven solutions",
      "Create predictive models",
      "Analyze complex datasets",
      "Present findings to stakeholders"
    ]
  }
];

const benefits = [
  {
    icon: "laptop-house",
    title: "Remote-First",
    description: "Work from anywhere in the world with flexible hours"
  },
  {
    icon: "heart",
    title: "Health & Wellness",
    description: "Comprehensive health insurance and wellness programs"
  },
  {
    icon: "graduation-cap",
    title: "Learning Budget",
    description: "$5,000 annual budget for courses and conferences"
  },
  {
    icon: "coins",
    title: "Competitive Pay",
    description: "Above-market salary and equity compensation"
  },
  {
    icon: "umbrella-beach",
    title: "Unlimited PTO",
    description: "Take time off when you need it, with a 3-week minimum"
  },
  {
    icon: "users",
    title: "Great Team",
    description: "Work with talented individuals who care about their craft"
  }
];
---

<Layout title="Careers at AI Business Suite">
  <main>
    <nav class="top-nav glass-card">
      <div class="logo">
        <i class="fas fa-robot text-gradient"></i>
        <span class="text-gradient">AI</span> Business Suite
      </div>
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to Overview
      </a>
    </nav>

    <header class="hero">
      <h1>Join Our <span class="text-gradient">AI Innovation Team</span></h1>
      <p class="description">
        Help us build the future of AI-driven business solutions. We're looking for exceptional talent 
        who are passionate about artificial intelligence and its applications in business.
      </p>
    </header>

    <section class="benefits">
      <h2>Why Join Us?</h2>
      <div class="benefits-grid">
        {benefits.map(benefit => (
          <div class="benefit-card glass-card">
            <i class={`fas fa-${benefit.icon}`}></i>
            <h3>{benefit.title}</h3>
            <p>{benefit.description}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="openings">
      <h2>Open Positions</h2>
      <div class="jobs-grid">
        {jobOpenings.map(job => (
          <div class="job-card glass-card">
            <div class="job-header">
              <h3>{job.title}</h3>
              <div class="job-tags">
                <span class="tag department">{job.department}</span>
                <span class="tag location"><i class="fas fa-location-dot"></i> {job.location}</span>
                <span class="tag type"><i class="fas fa-clock"></i> {job.type}</span>
              </div>
            </div>
            
            <div class="job-meta">
              <div class="meta-item">
                <i class="fas fa-briefcase"></i>
                <span>{job.experience}</span>
              </div>
              <div class="meta-item">
                <i class="fas fa-money-bill-wave"></i>
                <span>{job.salary}</span>
              </div>
            </div>

            <div class="job-details">
              <div class="section">
                <h4><i class="fas fa-list-check"></i> Requirements</h4>
                <ul>
                  {job.requirements.map(req => (
                    <li>{req}</li>
                  ))}
                </ul>
              </div>

              <div class="section">
                <h4><i class="fas fa-tasks"></i> Responsibilities</h4>
                <ul>
                  {job.responsibilities.map(resp => (
                    <li>{resp}</li>
                  ))}
                </ul>
              </div>
            </div>

            <button class="apply-btn">
              Apply Now <i class="fas fa-arrow-right"></i>
            </button>
          </div>
        ))}
      </div>
    </section>

    <section class="cta-section glass-card">
      <h2>Don't see the right role?</h2>
      <p>We're always looking for talented individuals to join our team.</p>
      <button class="contact-btn">
        <i class="fas fa-paper-plane"></i> Send Us Your Resume
      </button>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 1400px;
  }

  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    margin-bottom: 2rem;
    position: sticky;
    top: 1rem;
    z-index: 100;
  }

  .back-link {
    color: white;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 1;
  }

  .hero {
    text-align: center;
    margin: 4rem auto;
    max-width: 800px;
    padding: 0 1rem;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: clamp(1.1rem, 3vw, 1.25rem);
    color: rgb(var(--accent-light));
    line-height: 1.6;
  }

  .benefits {
    margin-bottom: 4rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }

  .benefit-card {
    padding: 2rem;
    text-align: center;
  }

  .benefit-card i {
    font-size: 2rem;
    color: rgb(var(--accent-light));
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent-light));
  }

  .benefit-card p {
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: rgb(var(--accent-light));
    text-align: center;
  }

  .jobs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }

  .job-card {
    padding: 2rem;
  }

  .job-header h3 {
    font-size: 1.5rem;
    margin: 0 0 1rem;
    color: rgb(var(--accent-light));
  }

  .job-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .tag.department {
    background: rgba(var(--accent), 0.2);
    color: rgb(var(--accent-light));
  }

  .tag.location {
    background: rgba(74, 222, 128, 0.2);
    color: #4ade80;
  }

  .tag.type {
    background: rgba(var(--accent-light), 0.2);
    color: rgb(var(--accent-light));
  }

  .job-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    color: rgb(var(--accent-light));
  }

  .job-details {
    margin-bottom: 1.5rem;
  }

  .section {
    margin-bottom: 1.5rem;
  }

  .section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent-light));
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .section li {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.5;
  }

  .section li:before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: rgb(var(--accent-light));
  }

  .apply-btn, .contact-btn {
    width: 100%;
    padding: 1rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    background: rgb(var(--accent));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .apply-btn:hover, .contact-btn:hover {
    background: rgb(var(--accent-light));
  }

  .cta-section {
    text-align: center;
    padding: 3rem 2rem;
    margin-top: 4rem;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
  }

  .cta-section p {
    margin-bottom: 2rem;
    color: rgb(var(--accent-light));
  }

  .contact-btn {
    max-width: 300px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .top-nav {
      padding: 1rem;
    }

    .benefits-grid {
      grid-template-columns: 1fr;
    }

    .jobs-grid {
      grid-template-columns: 1fr;
    }

    .job-card {
      padding: 1.5rem;
    }

    .job-tags {
      flex-direction: column;
      align-items: flex-start;
    }

    .job-meta {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
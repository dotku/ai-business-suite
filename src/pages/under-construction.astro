<style>
  .construction-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .message {
    color: rgb(var(--accent-light));
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .back-btn {
    background: rgb(var(--accent));
    color: white;
    text-decoration: none;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    transition: background 0.2s ease;
  }

  .back-btn:hover {
    background: rgb(var(--accent-light));
  }
</style>
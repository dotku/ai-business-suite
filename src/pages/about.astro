---
import Layout from '../layouts/Layout.astro';

const teamHighlights = [
  {
    title: "Industry Experience",
    description: "Our leadership team brings over a decade of combined experience across AI, software development, and business operations.",
    icon: "briefcase"
  },
  {
    title: "Technical Excellence",
    description: "We've successfully delivered enterprise-grade AI solutions for Fortune 500 companies and innovative startups.",
    icon: "microchip"
  },
  {
    title: "Business Focus",
    description: "Our solutions are designed to deliver measurable business value and ROI through practical AI implementation.",
    icon: "chart-line"
  }
];

const investmentDetails = {
  round: "Seed",
  seeking: "$1,000,000",
  equity: "10%",
  use: [
    "Product development and enhancement",
    "Market expansion",
    "Team growth",
    "Operations scaling"
  ]
};
---

<Layout title="About Us - AI Business Suite">
  <main>
    <nav class="top-nav glass-card">
      <div class="logo">
        <i class="fas fa-robot text-gradient"></i>
        <span class="text-gradient">AI</span> Business Suite
      </div>
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to Overview
      </a>
    </nav>

    <header class="hero">
      <h1>About <span class="text-gradient">Our Team</span></h1>
      <p class="description">
        We are a team of seasoned professionals with extensive experience in AI, software development, 
        and business operations. Our mission is to make AI accessible and practical for businesses of all sizes.
      </p>
    </header>

    <section class="team-highlights">
      <div class="highlights-grid">
        {teamHighlights.map(highlight => (
          <div class="highlight-card glass-card">
            <i class={`fas fa-${highlight.icon}`}></i>
            <h3>{highlight.title}</h3>
            <p>{highlight.description}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="investment-opportunity glass-card">
      <h2>Investment Opportunity</h2>
      <div class="investment-details">
        <div class="detail-row">
          <div class="detail">
            <h4>Round</h4>
            <p>{investmentDetails.round}</p>
          </div>
          <div class="detail">
            <h4>Seeking</h4>
            <p>{investmentDetails.seeking}</p>
          </div>
          <div class="detail">
            <h4>Equity</h4>
            <p>{investmentDetails.equity}</p>
          </div>
        </div>
        <div class="use-of-funds">
          <h4>Use of Funds</h4>
          <ul>
            {investmentDetails.use.map(item => (
              <li><i class="fas fa-check"></i> {item}</li>
            ))}
          </ul>
        </div>
      </div>
      <div class="cta-buttons">
        <a href="/fundraising" class="cta-btn primary">
          <i class="fas fa-chart-line"></i> Learn More About Investing
        </a>
        <a href="mailto:contact@aibusinesssuite.com" class="cta-btn secondary">
          <i class="fas fa-envelope"></i> Contact Us
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 1400px;
  }

  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    margin-bottom: 2rem;
    position: sticky;
    top: 1rem;
    z-index: 100;
  }

  .back-link {
    color: white;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 1;
  }

  .hero {
    text-align: center;
    margin: 4rem auto;
    max-width: 800px;
    padding: 0 1rem;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: clamp(1.1rem, 3vw, 1.25rem);
    color: rgb(var(--accent-light));
    line-height: 1.6;
  }

  .team-highlights {
    margin-bottom: 4rem;
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }

  .highlight-card {
    padding: 2rem;
    text-align: center;
  }

  .highlight-card i {
    font-size: 2.5rem;
    color: rgb(var(--accent-light));
    margin-bottom: 1rem;
  }

  .highlight-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent-light));
  }

  .highlight-card p {
    line-height: 1.6;
    opacity: 0.9;
  }

  .investment-opportunity {
    padding: 3rem 2rem;
    text-align: center;
  }

  .investment-opportunity h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: rgb(var(--accent-light));
  }

  .investment-details {
    max-width: 800px;
    margin: 0 auto 2rem;
  }

  .detail-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .detail h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--accent-light));
  }

  .detail p {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .use-of-funds {
    text-align: left;
  }

  .use-of-funds h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent-light));
  }

  .use-of-funds ul {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .use-of-funds li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .use-of-funds li i {
    color: #4ade80;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .cta-btn.primary {
    background: rgb(var(--accent));
    color: white;
  }

  .cta-btn.secondary {
    background: rgba(var(--accent-light), 0.1);
    color: rgb(var(--accent-light));
    border: 1px solid rgba(var(--accent-light), 0.2);
  }

  .cta-btn:hover {
    transform: translateY(-2px);
  }

  .cta-btn.primary:hover {
    background: rgb(var(--accent-light));
  }

  .cta-btn.secondary:hover {
    background: rgba(var(--accent-light), 0.2);
  }

  @media (max-width: 768px) {
    .top-nav {
      padding: 1rem;
    }

    .investment-opportunity {
      padding: 2rem 1rem;
    }

    .detail-row {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-btn {
      width: 100%;
    }
  }
</style>
---
import Layout from '../layouts/Layout.astro';

const jobOpenings = [
  {
    title: "AI/ML Engineer",
    department: "Engineering",
    requirements: [
      "5+ years experience in machine learning",
      "Strong Python and TensorFlow/PyTorch skills",
      "Experience with NLP and large language models",
      "Track record of deploying ML models to production"
    ],
    responsibilities: [
      "Design and implement AI/ML solutions",
      "Collaborate with cross-functional teams",
      "Optimize model performance and scalability",
      "Mentor junior engineers"
    ]
  },
  {
    title: "Full Stack Developer",
    department: "Engineering",
    requirements: [
      "3+ years experience with modern web frameworks",
      "Strong TypeScript and React skills",
      "Experience with Node.js and API development",
      "Understanding of cloud services (AWS/GCP/Azure)"
    ],
    responsibilities: [
      "Build and maintain web applications",
      "Implement AI integrations",
      "Optimize application performance",
      "Write clean, maintainable code"
    ]
  },
  {
    title: "Data Scientist",
    department: "Data",
    requirements: [
      "MS/PhD in Computer Science, Statistics, or related field",
      "Strong background in statistical analysis",
      "Experience with data visualization",
      "Proficiency in Python and R"
    ],
    responsibilities: [
      "Develop data-driven solutions",
      "Create predictive models",
      "Analyze complex datasets",
      "Present findings to stakeholders"
    ]
  }
];

const applicationSteps = [
  {
    step: 1,
    title: "AI Resume Screening",
    description: "Our AI analyzes your resume to match skills and experience with job requirements"
  },
  {
    step: 2,
    title: "Initial Assessment",
    description: "Complete a brief technical assessment tailored to your role"
  },
  {
    step: 3,
    title: "AI Interview",
    description: "Participate in an AI-driven preliminary interview to assess cultural fit and soft skills"
  },
  {
    step: 4,
    title: "Team Interview",
    description: "Meet with potential team members and discuss technical challenges"
  },
  {
    step: 5,
    title: "Final Decision",
    description: "Receive a decision within 48 hours of completing all interviews"
  }
];
---

<Layout title="Join Our AI Innovation Team">
  <main>
    <h1>Join Our <span class="text-gradient">AI Innovation Team</span></h1>
    <p class="intro">
      Help us build the future of AI-driven business solutions. We're looking for talented individuals 
      who are passionate about artificial intelligence and its applications in business.
    </p>

    <section class="openings">
      <h2>Current Openings</h2>
      <div class="jobs-grid">
        {jobOpenings.map(job => (
          <div class="job-card">
            <h3>{job.title}</h3>
            <span class="department">{job.department}</span>
            
            <div class="requirements">
              <h4>Requirements</h4>
              <ul>
                {job.requirements.map(req => (
                  <li>{req}</li>
                ))}
              </ul>
            </div>

            <div class="responsibilities">
              <h4>Responsibilities</h4>
              <ul>
                {job.responsibilities.map(resp => (
                  <li>{resp}</li>
                ))}
              </ul>
            </div>

            <button class="apply-btn">Apply Now</button>
          </div>
        ))}
      </div>
    </section>

    <section class="process">
      <h2>Our AI-Driven Recruitment Process</h2>
      <div class="steps-grid">
        {applicationSteps.map(step => (
          <div class="step-card">
            <div class="step-number">{step.step}</div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .intro {
    text-align: center;
    margin-bottom: 3rem;
    color: rgb(var(--accent-light));
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: rgb(var(--accent-light));
  }

  .jobs-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    margin-bottom: 4rem;
  }

  .job-card {
    background: rgba(var(--accent-dark), 0.2);
    border: 1px solid rgba(var(--accent-light), 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    transition: transform 0.2s ease;
  }

  .job-card:hover {
    transform: translateY(-5px);
  }

  .job-card h3 {
    font-size: 1.5rem;
    margin: 0;
    color: rgb(var(--accent-light));
  }

  .department {
    display: inline-block;
    background: rgba(var(--accent), 0.2);
    padding: 0.2rem 0.8rem;
    border-radius: 15px;
    font-size: 0.9rem;
    margin: 0.5rem 0 1rem;
  }

  .job-card h4 {
    color: rgb(var(--accent-light));
    margin: 1.5rem 0 0.5rem;
  }

  .job-card ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .job-card li {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .job-card li:before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: rgb(var(--accent-light));
  }

  .apply-btn {
    background: rgb(var(--accent));
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
    cursor: pointer;
    width: 100%;
    margin-top: 1.5rem;
    transition: background 0.2s ease;
  }

  .apply-btn:hover {
    background: rgb(var(--accent-light));
  }

  .steps-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .step-card {
    background: rgba(var(--accent-dark), 0.2);
    border: 1px solid rgba(var(--accent-light), 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    text-align: center;
  }

  .step-number {
    background: rgb(var(--accent));
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-weight: bold;
  }

  .step-card h3 {
    color: rgb(var(--accent-light));
    margin: 0 0 1rem;
  }

  .step-card p {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.9;
  }
</style>